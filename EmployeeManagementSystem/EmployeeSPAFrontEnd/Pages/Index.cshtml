@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html ng-app="myApp">
<head>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>

    <script src="~/js/EmployeeControllers.js"></script>


</head>
<body ng-app="myApp">



    <center><h3>Employee Management System</h3></center>

    <div role="navigation" class="navbar navbar-inverse">
        <ul class="nav navbar-nav">
            <li><a asp-page="/Home" style="font-size:x-large">Home</a></li>
            <li><a asp-page="#Regitration" style="font-size:x-large">Registration</a></li>
            <li><a asp-page="/Login" style="font-size:x-large">Login</a></li>
        </ul>

    </div>

    <form id="Regitration" ng-app=" myApp" ng-controller="AddEmployeeController">
        <div class="container" style="width:550px">
            <h2>User Registraion Form</h2>
        </div>

        <label for="fullName">Full Name: </label><br />
        <input type="text" id="fullName" placeholder="Enter Full Name " ng-model="newEmployee.fullName" required autofocus /> <br />

        <label for="designation">Designation:  </label><br />
        <input type="text" id="designation" placeholder="Enter Designation " ng-model="newEmployee.designation" required autofocus><br />

        <label for="slary"> Salary:  </label><br />
        <input type="text" id="salary" placeholder="Enter Salary " ng-model="newEmployee.salary" required autofocus><br />

        <label for="email"> Email:  </label><br />
        <input type="email" id="email" placeholder="Enter Email " ng-model="newEmployee.email" required autofocus><br />

        <label for="password"> Password:  </label><br />
        <input type="password" id="password" placeholder="Enter Password " ng-model="newEmployee.password" required autofocus><br />

        <br />
        <input type="hidden" ng-model="newEmployee.id">
        <input type="button" value="{{btntext}}" class="btn btn-primary" ng-click="AddEmployee()" />

        <br /><br />
        <div ng-view>

        </div>

    </form>
   


    <form ng-app=" myApp">
        <div ng-controller="EmployeeControllers">
            <h4><b>Registered Employees</b></h4>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="info">                       
                        <th>EmployeeID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Designation</th>
                        <th>Salary</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="employee in employees">
                        <td>{{employee.employeeID}}</td>
                        <td>{{ employee.employeeName }}</td>
                        <td>{{ employee.emailID }}</td>
                        <td>{{ employee.designation }}</td>
                        <td>{{employee.salary}}</td>

                        
                        <td ng-if="!ifSearchUser">
                            <a href="#" ng-click="edit(employee.employeeID)" role="button" class="btn btn-info">Edit</a> &nbsp;
                            <a href="#" ng-click="DeleteEmployee(employee.employeeID)" role="button" class="btn btn-danger" >Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>

            <nav ng-view>

            </nav>
        </div>
    </form>




</body>
</html>
